<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/aboutBkgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/AboutBkgImg"
        android:src="@drawable/mainmenu" >
    </ImageView>

    <RelativeLayout
        android:id="@+id/backBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:contentDescription="@string/AboutBackImg"
            android:src="@drawable/backselector" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/btnDiff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/backBottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp"
        android:clickable="true"
        android:contentDescription="@string/AboutBackImg"
        android:src="@drawable/diffselector" />

    <ImageButton
        android:id="@+id/btnSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnDiff"
        android:layout_alignLeft="@+id/btnDiff"
        android:layout_marginBottom="58dp"
        android:clickable="true"
        android:contentDescription="@string/AboutBackImg"
        android:src="@drawable/soundselector" />

</RelativeLayout>
